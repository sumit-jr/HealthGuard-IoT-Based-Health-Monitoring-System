<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/b"
    tools:context=".HomeFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:text="Measurement"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/Stressratecard"
        android:layout_width="400dp"
        android:layout_height="190dp"
        android:layout_marginTop="180dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:id="@+id/stressLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
           android:orientation="horizontal">

            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:text="  Stress Rate   :              "
                    android:textSize="20dp"
                    android:textStyle="italic"

                    />

                <TextView
                    android:id="@+id/valueofstressrate"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="50dp"
                    android:text="wait..."
                    android:layout_marginTop="-70dp"
                    android:textColor="@color/branjal"
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic"

                    />
            </LinearLayout>



            <com.jjoe64.graphview.GraphView
                android:id="@+id/linegraphStress"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/BloodPressureCard"
        android:layout_width="400dp"
        android:layout_height="190dp"
        android:layout_marginTop="360dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="97dp"
                android:layout_height="148dp"></LinearLayout>

            <ImageView
                android:id="@+id/blood"
                android:layout_width="180dp"
                android:layout_marginStart="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/bpgraph" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="50dp"
                android:text="BloodPressure: 60/120             "
                android:textSize="20dp"
                android:textStyle="italic"

                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/PulserateCard"
        android:layout_width="400dp"
        android:layout_height="190dp"
        android:layout_marginTop="540dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="97dp"
                android:layout_height="148dp"></LinearLayout>

            <ImageView
                android:id="@+id/temperature"
                android:layout_width="180dp"
                android:layout_marginStart="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/pules" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="50dp"
                android:text="Temperature : 37 c"
                android:textSize="20dp"
                android:textStyle="italic"

                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/textViewgood"
            android:layout_width="260dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingTop="22dp"
            android:textSize="25dp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:textColor="@color/green"
            android:text="Good Morning " />

        <TextView
            android:id="@+id/textViewname"
            android:layout_width="260dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:textStyle="bold"
            android:paddingTop="22dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:textColor="@color/branjal"
            android:text=" Loading..." />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rightImageView"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="4dp"
            android:paddingTop="22dp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:layout_marginBottom="0dp"
            android:src="@drawable/defaultimage" />
    </RelativeLayout>



</FrameLayout>




